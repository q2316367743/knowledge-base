{
    "main": "dist/index.html",
    "preload": "preload.js",
    "logo": "public/logo.png",
    "platform": [
        "win32",
        "darwin",
        "linux"
    ],
    "development": {
        "main": "http://localhost:5173/"
    },
    "pluginSetting": {
        "single": true,
        "height": 0
    },
    "features": [
        {
            "code": "function:application",
            "explain": "知识库",
            "icon": "public/logo.png",
            "platform": [
                "win32",
                "darwin",
                "linux"
            ],
            "cmds": [
                "知识库"
            ]
        },
        {
            "code": "function:import",
            "explain": "知识库",
            "icon": "public/logo.png",
            "platform": [
                "win32",
                "darwin",
                "linux"
            ],
            "cmds": [
                {
                    "type": "regex",
                    "label": "听雨文章导入",
                    "match": "/^\\s*(\\{[\\s\\S]*\\}|\\[[\\s\\S]*\\])\\s*$/",
                    "minLength": 2
                }
            ]
        },
        {
            "code": "function:add",
            "explain": "知识库",
            "icon": "public/logo.png",
            "platform": [
                "win32",
                "darwin",
                "linux"
            ],
            "cmds": [
                {
                    "type": "over",
                    "label": "新增文章",
                    "minLength": 20,
                    "maxLength": 999999
                }
            ]
        },
        {
            "code": "function:search",
            "explain": "听雨文件浏览器",
            "icon": "public/logo.png",
            "mainPush": true,
            "platform": [
                "win32",
                "darwin",
                "linux"
            ],
            "cmds": [
                {
                    "type": "over",
                    "label": "文章搜索",
                    "exclude": "\n/[\\\/\t\n]/",
                    "minLength": 1,
                    "maxLength": 500
                }
            ]
        }
    ]
}
