{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "pnpm build:tauri",
        "beforeDevCommand": "pnpm dev:tauri",
        "devPath": "http://localhost:5173",
        "distDir": "../dist"
    },
    "package": {
        "productName": "knowledge-base",
        "version": "1.5.4"
    },
    "tauri": {
        "allowlist": {
            "clipboard": {
                "writeText": true
            },
            "notification": {
                "all": true
            },
            "shell": {
                "open": true
            },
            "path": {
                "all": true
            },
            "fs": {
                "all": true,
                "scope": [
                    "$PICTURE/knowledge-base",
                    "$PICTURE/knowledge-base/*",
                    "$APPDATA/knowledge-base",
                    "$APPDATA/knowledge-base/*",
                    "$APPDATA/knowledge-base/local",
                    "$APPDATA/knowledge-base/local/*",
                    "$APPDATA/knowledge-base/local/auth/*",
                    "$APPDATA/knowledge-base/local/setting/*",
                    "$APPDATA/knowledge-base/local/setting",
                    "$APPDATA/knowledge-base/article",
                    "$APPDATA/knowledge-base/article/*",
                    "$APPDATA/knowledge-base/article/base/*",
                    "$APPDATA/knowledge-base/article/content/*",
                    "$APPDATA/knowledge-base/article/comment/*",
                    "$APPDATA/knowledge-base/article/attachment/*",
                    "$APPDATA/knowledge-base/zone",
                    "$APPDATA/knowledge-base/zone/*",
                    "$APPDATA/knowledge-base/zone/base/*",
                    "$APPDATA/knowledge-base/zone/content/*",
                    "$APPDATA/knowledge-base/zone/preview/*",
                    "$APPDATA/knowledge-base/zone/attachment/*",
                    "$APPDATA/knowledge-base/zone/comment/*",
                    "$APPDATA/knowledge-base/todo",
                    "$APPDATA/knowledge-base/todo/*",
                    "$APPDATA/knowledge-base/todo/category/*",
                    "$APPDATA/knowledge-base/todo/article/*",
                    "$APPDATA/knowledge-base/todo/item/*",
                    "$APPDATA/knowledge-base/todo/attr/*",
                    "$APPDATA/knowledge-base/app/attachment/*",
                    "$APPDATA/knowledge-base/key",
                    "$APPDATA/knowledge-base/key/**/*"
                ]
            },
            "protocol": {
                "asset": true,
                "assetScope": [
                    "$PICTURE/knowledge-base",
                    "$PICTURE/knowledge-base/*"
                ]
            }
        },
        "bundle": {
            "active": true,
            "category": "Education",
            "copyright": "落雨不悔 © 2023",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "xyz.esion.knowledge-base",
            "longDescription": "构建自己的知识库，笔记、动态、待办三合一，支持markdown笔记、富文本笔记和代码笔记，支持多种格式导入，支持zip导出，更多功能等你发现。",
            "publisher": "落雨不悔",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "webviewInstallMode": {
                    "type": "embedBootstrapper"
                },
                "wix": {
                    "license": "../LICENSE",
                    "language": "zh-CN"
                }
            }
        },
        "security": {
            "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 770,
                "width": 1080,
                "minHeight": 770,
                "minWidth": 1080,
                "resizable": true,
                "title": "知识库",
                "center": true
            }
        ]
    }
}
